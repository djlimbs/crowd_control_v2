<div class="header" style="margin-top:19px;">
	<div class="pull-right menu-items">
		<div class="btn-group">
		  	<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
		    	Show me <span class="caret"></span>
		  	</button>
		  	<ul class="dropdown-menu" role="menu">
		  		<li><a href="#" {{action "clickShowAllSongs"}}>All Songs</a></li>
		  		{{#each allCategories}}
		  			<li><a href="#" {{action "clickShowCategory" this}}>{{.}}</a></li>
		  		{{/each}}
		  		<li class="divider"></li>
		  		<li><a href="#" {{action "clickShowPlays"}}>Just Plays</a></li>
		    	<li><a href="#" {{action "clickShowNays"}}>Just Nays</a></li>
		  	</ul>
		</div>
		<button type="button" class="btn btn-default">Print</button>
	</div>
	<h3 class="pb0">Pick some songs</h3>
	<p>Hover over songs to tell the DJ to "Play" the track, say "Nay" if it's requested, or go "Either way"
</div>
{{#unless preferenceFilter}}
	{{#each displayedCategories}}
		<div class="row text-center">
			<div style="padding-bottom:10px;">
				<h4 class="mb0">{{categoryName}}</h4>
				<p><small><i class="text-muted">{{categoryDescription}}</i></small></p>
			</div>
			{{#each songs itemController="song"}}
				<div class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
					<div class="song-choice">
						<span {{bind-attr class="rating"}}>{{displayText}}</span>
						<div class="rate">
							<span class="clickable glyphicon glyphicon-music"></span> 
							&#8226; <small class="clickable" {{action "clickPlay"}}>Play</small> 
							&#8226; <small class="clickable" {{action "clickNay"}}>Nay</small> 
							&#8226; <small class="clickable" {{action "clickEitherWay"}}>Either Way</small>
						</div>
					</div>
				</div>
			{{/each}}
		</div>
	{{/each}}
{{/unless}}
{{#if preferenceFilter}}
	<div class="row text-center">
		<div style="padding-bottom:10px;">
			<h4 class="mb0">{{preferenceText}}</h4>
		</div>
		{{#if noSongsRated}}
			Nothing picked yet! See them <a href="#" {{action "clickShowAllSongs"}}>all</a> to start rating songs!
		{{/if}}
		{{#each displayedCategories}}
			<div>
				{{#each songs itemController="song"}}
					<div class="song-choice">
						<span>{{displayText}}</span>
						<div class="rate">
							<span class="clickable glyphicon glyphicon-music"></span> 
							{{#unless isPlay}}&#8226; <small class="clickable" {{action "clickPlay"}}>Play</small> {{/unless}}
							{{#unless isNay}}&#8226; <small class="clickable" {{action "clickNay"}}>Nay</small> {{/unless}}
							&#8226; <small class="clickable" {{action "clickEitherWay"}}>Either Way</small>
						</div>
					</div>
				{{/each}}
			</div>
		{{/each}}
	</div>
{{/if}}
